<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.msol.readmyphoto" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="io.msol.readmyphoto.PhotoListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="io.msol.readmyphoto.PhotoDetailActivity"
            android:label="@string/title_photo_detail"
            android:parentActivityName="io.msol.readmyphoto.PhotoListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.msol.readmyphoto.PhotoListActivity" />
        </activity>
    </application>

</manifest>
